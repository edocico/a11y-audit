{
  "name": "a11y-audit",
  "version": "0.1.0",
  "description": "Framework-agnostic static contrast audit for WCAG 2.1 AA/AAA and APCA",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "a11y-audit": "./dist/bin/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "a11y",
    "accessibility",
    "contrast",
    "wcag",
    "apca",
    "audit",
    "tailwind",
    "css"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "apca-w3": "^0.1.9",
    "chalk": "^5.6.2",
    "colord": "^2.9.3",
    "commander": "^14.0.3",
    "culori": "^4.0.2",
    "glob": "^13.0.3",
    "lilconfig": "^3.1.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "fast-check": "^4.5.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
